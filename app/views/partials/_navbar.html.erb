<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 nav">
            <nav>
                <%# Left side %>
                <%= link_to ('javascript:history.go(-1);'), :class => 'button back_button'  do %>
                    <i class="fa fa-chevron-left hidden-md hidden-lg"></i>
                <% end %>
                <a id="navlogo" href="/"><%= image_tag('conpass_logo.png')%></a>

                <%# Right side %>
                <div class="pull-right">
                <% if logged_in? %>
                    <a id="hamburger-nav" href="javascript:;"><i class="fa fa-bars"></i></a>
                    <div id="hamburger-nav-items">
                        <div class="triangle arrow-up"></div>
                        <ul>
                            <li><%= link_to "Dashboard", dashboard_path %></li>
                            <li><%= link_to "Logout", logout_path%></li>
                        </ul>
                    </div>
                <% else %>
                    <%= link_to "login", login_path, class: "tanbtn" %>
                  <% end %>
                </div>

            </nav>
        </div>
    </div>
</div>
