<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-4 col-md-offset-4">
      <h2 class="text-center">Log In</h2>

      <%= form_tag sessions_path, :class => "login" do %>


      <%= text_field_tag :username, params[:username], class: "form-control", id: "username", placeholder: "Username", :required => true, :autofocus => true %>
      <%= password_field_tag :password, params[:password], class: "form-control", id: "password", placeholder: "Password", :required => true %>
      <%= submit_tag "Log In", class: "btn btn-lg btn-primary btn-block" %>
      
      <% end %>
      
    </div>
  </div>
</div>
